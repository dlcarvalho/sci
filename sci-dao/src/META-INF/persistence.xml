<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="sci"  transaction-type="JTA">
		<jta-data-source>sciDS</jta-data-source>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>br.com.ds.sci.entity.Tributo</class>
		<class>br.com.ds.sci.entity.TributacaoProduto</class>
		<class>br.com.ds.sci.entity.Produto</class>
		<class>br.com.ds.sci.entity.CategoriaProduto</class>
		<class>br.com.ds.sci.entity.Indice</class>
		<class>br.com.ds.sci.entity.IndexadorProduto</class>
		<class>br.com.ds.sci.entity.ValorIndice</class>
		<class>br.com.ds.sci.entity.Aplicacao</class>
		<class>br.com.ds.sci.entity.Simulacao</class>
		<class>br.com.ds.sci.entity.Carteira</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/sb" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.hbm2ddl.auto" value= "validate" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		</properties>

	</persistence-unit>

</persistence>
